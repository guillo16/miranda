<div class="container-challenge">
<% title "Challenges" %>
  <div class="text-center"><h1> Challenges</h1></div>
  <% @pending_challenges.each do |challenge| %>
  <div class="card-challenge box to-do" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://img.youtube.com/vi/<%= challenge.video.url %>/hqdefault.jpg')">
      <div class="ribbon ribbon-top-left">
        <span>
          TO DO
        </span>
      </div>
    <div class="text-center">
      <div class="challenge-avatar-box">
       <% avatar_url = challenge.user.photo.filename || challenge.user.facebook_picture_url || "https://www.w3schools.com/howto/img_avatar.png" %>
          <%= cl_image_tag avatar_url, height: 150, width: 150, crop: :fill, class: "img-circle challenge-image" %>
      <h5 class="text-center score-text"><%= challenge.score[:user] %></h5>
      </div>
    </div>
    <div class="text-center challenge-title">
      <p><%= challenge.video.title.truncate(25)[0..-5].upcase %></p>
      <%= link_to "Go to challenge", video_path(challenge.video), class: "btn btn-primary" %>
    </div>

    <div class="text-center">
    <% avatar_url = challenge.opponent.photo.filename || challenge.opponent.facebook_picture_url || "https://www.w3schools.com/howto/img_avatar.png" %>
          <%= cl_image_tag avatar_url, height: 150, width: 150, crop: :fill, class: "img-circle challenge-image" %>
      <h5 class="text-center score-text"><%= challenge.score[:opponent] %></h5>
    </div>

  </div>
      <% end %>
  <% @other_challenges.each do |challenge| %>
  <div class="card-challenge box done-challenge" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://img.youtube.com/vi/<%= challenge.video.url %>/hqdefault.jpg')">
      <div class="ribbon ribbon-top-left ribbon-empty">
        <span>
        </span>
      </div>
    <div class="text-center">
       <% avatar_url = challenge.user.photo.filename || challenge.user.facebook_picture_url || "https://www.w3schools.com/howto/img_avatar.png" %>
          <%= cl_image_tag avatar_url, height: 150, width: 150, crop: :fill, class: "img-circle challenge-image" %>
      <h5 class="text-center score-text"><%= challenge.score[:user] %></h5>
    </div>
    <div class="text-center challenge-title">
      <p><%= challenge.video.title.truncate(25)[0..-5].upcase %></p>
      <%= link_to "Go to challenge", video_path(challenge.video), class: "btn btn-primary" %>
    </div>

    <div class="text-center">
    <% avatar_url = challenge.opponent.photo.filename || challenge.opponent.facebook_picture_url || "https://www.w3schools.com/howto/img_avatar.png" %>
          <%= cl_image_tag avatar_url, height: 150, width: 150, crop: :fill, class: "img-circle challenge-image" %>
      <h5 class="text-center score-text"><%= challenge.score[:opponent] %></h5>
    </div>
  </div>
      <% end %>
<%= @pending_challenges %><br/>
<%= @other_challenges %>
</div>


